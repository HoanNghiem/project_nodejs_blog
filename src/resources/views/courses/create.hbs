<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="post" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên</label>
            <input type="email" class="form-control" id="name" name="name">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Mô tả</label>
            <input type="email" class="form-control" id="description" name="description">
        </div>

        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input type="email" class="form-control" id="videoId" name="videoId">
        </div>

        <div class="form-group">
            <label for="level">Level</label>
            <input type="email" class="form-control" id="level" name="level">
        </div>

        <div class="input-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="inputGroupFile04">
                <label class="custom-file-label" for="inputGroupFile04">Choose file</label>
            </div>
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button">Button</button>
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Thêm khóa học</button>
    </form>
</div>