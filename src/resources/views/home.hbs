<h1 style="color: blue; margin-top:30px">Khóa học</h1>
<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-3">
            <div class="card card-course-item"  >
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                </a>
                
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" style="text-decoration: none">
                        <h5 class="card-title" style="height: 39px;">{{this.name}}</h5>
                    </a>
                    <p class="card-text" style="height: 100px">{{this.description}}</p>
                    <a href="/courses/{{this.slug}}" class="btn btn-primary">Học ngay</a>
                </div>
                </div>
        </div>
        {{/each}}

    </div>
</div>